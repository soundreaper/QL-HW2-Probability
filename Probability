      " [0.         1.66666667 1.16666667]\n",
      " [0.         1.16666667 0.91666667]]\n"
     ]
    }
   ],
   "source": [
    "def covariance_matrix(matrix):\n",
    "    list_matrix = matrix.T\n",
    "    covar_matx = []\n",
    "\n",
    "    for row in range(len(list_matrix)):\n",
    "        covar_matx.append([])\n",
    "        for col in range(len(list_matrix)):\n",
    "            covar_matx[row].append(covariance(list_matrix[row], list_matrix[col]))\n",
    "    \n",
    "    return np.array(covar_matx)\n",
    "\n",
    "dataset = np.array([[1, 1, 1], [1, 2, 1], [1, 3, 2], [1, 4, 3]])\n",
    "print(covariance_matrix(dataset))"
   ]
