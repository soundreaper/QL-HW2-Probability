    "# Calculate the Covariance\n",
    "import numpy as np\n",
    "\n",
    "def covariance(x,y):\n",
    "    return np.sum((x - np.mean(x)) * (y - np.mean(y))) / (x.shape[0] - 1)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 8,
   "metadata": {},
   "outputs": [
